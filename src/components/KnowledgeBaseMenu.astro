<script>
  // Simple menu implementation
  function initMenu() {
    const menu = document.getElementById('kb-menu');
    if (!menu) return;

    // Desktop: always visible
    if (window.innerWidth >= 769) {
      menu.classList.add('active');
    }

    // Close menu on mobile when clicking overlay
    const overlay = menu.querySelector('.menu-overlay');
    if (overlay) {
      overlay.addEventListener('click', () => {
        if (window.innerWidth < 769) {
          menu.classList.remove('active');
          document.body.style.overflow = '';
          document.body.style.position = '';
        }
      });
    }

    // Close menu on mobile when clicking menu items
    const menuItems = menu.querySelectorAll('.menu-item');
    menuItems.forEach((item) => {
      // Prevent clicks on coming-soon items
      if (item.classList.contains('coming-soon')) {
        item.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          return false;
        });
      } else {
        item.addEventListener('click', () => {
          if (window.innerWidth < 769) {
            setTimeout(() => {
              menu.classList.remove('active');
              document.body.style.overflow = '';
              document.body.style.position = '';
            }, 100);
          }
        });
      }
    });
  }

  // Toggle menu function
  function toggleMenu() {
    const menu = document.getElementById('kb-menu');
    if (!menu || window.innerWidth >= 769) return;

    const isActive = menu.classList.contains('active');
    if (isActive) {
      menu.classList.remove('active');
      document.body.style.overflow = '';
      document.body.style.position = '';
    } else {
      menu.classList.add('active');
      document.body.style.overflow = 'hidden';
      document.body.style.position = 'fixed';
      document.body.style.width = '100%';
    }
  }

  // Export for toggle button
  (window as any).toggleKBMenu = toggleMenu;

  // Keyboard: ESC to close
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      const menu = document.getElementById('kb-menu');
      if (menu && window.innerWidth < 769 && menu.classList.contains('active')) {
        toggleMenu();
      }
    }
  });

  // Handle resize
  window.addEventListener('resize', () => {
    const menu = document.getElementById('kb-menu');
    if (!menu) return;
    
    if (window.innerWidth >= 769) {
      menu.classList.add('active');
      document.body.style.overflow = '';
      document.body.style.position = '';
    }
  });

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMenu);
  } else {
    initMenu();
  }

  // Re-initialize on page transitions (simple reset)
  document.addEventListener('astro:page-load', () => {
    const menu = document.getElementById('kb-menu');
    if (menu && window.innerWidth < 769) {
      menu.classList.remove('active');
      document.body.style.overflow = '';
      document.body.style.position = '';
    }
    setTimeout(initMenu, 10);
  });

  document.addEventListener('astro:after-swap', () => {
    setTimeout(initMenu, 10);
  });

  // Book icon fallback
  function initBookIcon() {
    const bookIcon = document.querySelector('.profile-picture-image') as HTMLImageElement;
    const placeholder = document.querySelector('.profile-picture-placeholder') as HTMLElement;
    
    if (bookIcon && placeholder) {
      bookIcon.addEventListener('error', () => {
        bookIcon.style.display = 'none';
        placeholder.style.display = 'flex';
      });
      
      if (bookIcon.complete && bookIcon.naturalWidth === 0) {
        bookIcon.style.display = 'none';
        placeholder.style.display = 'flex';
      } else {
        placeholder.style.display = 'none';
      }
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBookIcon);
  } else {
    initBookIcon();
  }

  document.addEventListener('astro:page-load', () => {
    setTimeout(initBookIcon, 10);
  });
</script>
