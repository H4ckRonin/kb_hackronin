---
import Icon from './Icons.astro';
import ThemeToggleButton from './ThemeToggleButton.svelte';

const { current = '' } = Astro.props;

const menuItems = [
  { href: '/', label: 'Home', icon: 'home', key: 'home' },
  { href: '/certifications', label: 'Certifications', icon: 'certifications', key: 'certifications' },
  { href: '/guides', label: 'Guides', icon: 'guides', key: 'guides', comingSoon: true },
  { href: '/methodologies', label: 'Methodologies', icon: 'methodology', key: 'methodologies', comingSoon: true },
  { href: '/techniques', label: 'Techniques', icon: 'techniques', key: 'techniques', comingSoon: true },
  { href: 'https://kb.offsec.nl', label: 'Tools', icon: 'tools', key: 'tools', external: true },
  { href: 'https://discord.gg/zvNP7HEVH5', label: 'Community', icon: 'discord', key: 'community', external: true },
  { href: '/support', label: 'Support Me', icon: 'support', key: 'support' },
];
---

<aside id="kb-menu" class="kb-menu">
  <div class="menu-overlay"></div>
  <div class="menu-container">
    <div class="menu-header">
      <div class="profile-picture-container">
        <a href="/" title="Home" class="profile-picture-link">
          <div class="profile-picture-wrapper">
            <img 
              src="/assets/book-icon.png" 
              alt="Knowledge Base" 
              class="profile-picture-image"
            />
            <div class="profile-picture-placeholder">KB</div>
            <div class="profile-picture-glow"></div>
          </div>
        </a>
      </div>
      <h1 class="menu-title">Knowledge Base</h1>
      <p class="menu-subtitle">Cybersecurity Certifications & Resources</p>
    </div>
    
    <nav class="menu-nav">
      {menuItems.map((item) => (
        <a 
          href={item.comingSoon ? '#' : item.href}
          class={`menu-item ${current === item.key ? 'active' : ''} ${item.comingSoon ? 'coming-soon' : ''}`}
          data-key={item.key}
          target={item.external ? '_blank' : undefined}
          rel={item.external ? 'noopener noreferrer' : undefined}
          onclick={item.comingSoon ? 'return false;' : undefined}
        >
          <span class="menu-item-icon">
            <Icon name={item.icon} size={18} />
          </span>
          <span class="menu-item-label">{item.label}</span>
          <span class="menu-item-indicator">â–¶</span>
          {item.comingSoon && (
            <span class="coming-soon-overlay">Coming Soon</span>
          )}
        </a>
      ))}
    </nav>

    <div class="menu-footer">
      <div class="menu-social-links">
        <a href="https://www.linkedin.com/in/hackronin/" target="_blank" rel="noopener" title="LinkedIn">
          <Icon name="linkedin" size={18} />
        </a>
        <a href="https://github.com/H4ckRonin" target="_blank" rel="noopener" title="GitHub">
          <Icon name="github" size={18} />
        </a>
        <a href="https://twitter.com/h4ckronin" target="_blank" rel="noopener" title="Twitter">
          <Icon name="twitter" size={18} />
        </a>
      </div>
      <div class="theme-toggle-menu">
        <ThemeToggleButton client:idle />
      </div>
      <p class="menu-hint">Press ESC to close menu</p>
      <p class="menu-credits">Made with â˜• and ðŸ¤– by H4ckronin</p>
    </div>
  </div>
</aside>

