---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icons.astro';
import { getCollection } from 'astro:content';
import { generateTitleFromFilename } from '../../utils/content';
import { withBase } from '../../utils/paths';

const title = 'Methodology - Knowledge Base';
const description = 'Penetration testing methodologies and structured approaches';
const permalink = `${Astro.site.href}methodology`;

// Map category names to icon names with fallback
function getCategoryIcon(category: string): string {
  const categoryLower = category.toLowerCase().replace(/\s+/g, '-');
  const iconMap: Record<string, string> = {
    'active-directory': 'active-directory',
    'cloud': 'cloud',
    'network': 'network',
    'ctf': 'ctf',
    'pentest': 'pentest',
    'red-team': 'red-team',
    'web-app': 'web-app',
    'web-application': 'web-application',
    'unified-kill-chain-methodology': 'unified-kill-chain-methodology',
    'general': 'general',
  };
  
  return iconMap[categoryLower] || 'methodology';
}

let allMethodology = await getCollection('methodology');

// Extract category from path or frontmatter
// Filter out README-only items and "general" category
allMethodology = allMethodology
  .filter(item => {
    const parts = item.id.split('/').filter(p => p);
    const filename = parts[parts.length - 1]?.replace('.md', '') || '';
    // Filter out README-only items
    return filename.toLowerCase() !== 'readme';
  })
  .map(item => {
  const parts = item.id.split('/').filter(p => p);
  const categoryFromPath = parts.length > 0 ? parts[0] : '';
  const category = item.data.category || categoryFromPath || 'general';
  
  return {
    ...item,
    data: {
      ...item.data,
      category: category.toLowerCase().replace(/\s+/g, '-'),
      title: item.data.title || generateTitleFromFilename(parts[parts.length - 1]?.replace('.md', '') || item.id)
    }
  };
  })
  .filter(item => item.data.category !== 'general'); // Filter out "general" category

// Group methodology by category
const groupedMethodology: Record<string, typeof allMethodology> = {};

allMethodology.forEach(item => {
  const category = item.data.category?.trim() || '';
  // Skip "general" category
  if (!category || category === 'general') return;
  if (!groupedMethodology[category]) {
    groupedMethodology[category] = [];
  }
  groupedMethodology[category].push(item);
});

// Sort items within each category
Object.keys(groupedMethodology).forEach(category => {
  groupedMethodology[category].sort((a, b) => {
  const aTitle = a.data.title || a.id;
  const bTitle = b.data.title || b.id;
  return aTitle.localeCompare(bTitle);
});
});

// Get all unique categories for filters
const allCategories = [...new Set(allMethodology.map(m => m.data.category).filter(Boolean))].sort();

// Get URL search params for filtering
const url = Astro.url;
const categoryFilter = url.searchParams.get('category') || '';
const searchQuery = url.searchParams.get('search') || '';

// Filter grouped methodology based on URL params
let filteredGroupedMethodology = { ...groupedMethodology };
if (categoryFilter) {
  filteredGroupedMethodology = { [categoryFilter]: filteredGroupedMethodology[categoryFilter] || [] };
}
