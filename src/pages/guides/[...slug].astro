  }

  /* Force wrapping for all text elements */
  .guide-content p,
  .guide-content li,
  .guide-content td,
  .guide-content th,
  .guide-content span:not(pre span):not(code span),
  .guide-content div:not(pre):not(.code-block-wrapper) {
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;
