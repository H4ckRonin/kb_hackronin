  /* Headings should also wrap */
  .guide-content h1,
  .guide-content h2,
  .guide-content h3,
  .guide-content h4,
  .guide-content h5,
  .guide-content h6 {
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;
    hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
