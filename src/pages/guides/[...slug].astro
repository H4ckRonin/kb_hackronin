  .guide-content h1,
  .guide-content h2,
  .guide-content h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-family: 'Poppins', sans-serif;
  }

  .guide-content h1 {
    font-size: 2.5rem;
    border-bottom: 2px solid var(--border-color, #222);
    padding-bottom: 0.5rem;
  }

  .guide-content h2 {
    font-size: 2rem;
    color: var(--accent-color, #d4b78c);
  }

  .guide-content h3 {
