import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icons.astro';
import { getCollection } from 'astro:content';
import { enrichGuideData, generateTitleFromFilename } from '../../utils/content';

const title = 'Guides - Knowledge Base';
const description = 'Step-by-step guides, tutorials, and walkthroughs for cybersecurity topics, techniques, and tools';
const permalink = `${Astro.site.href}guides`;

let allGuides = await getCollection('guides');

// Filter out files that don't have at least 2 parts (category/filename minimum)
allGuides = allGuides.filter(guide => {
  const parts = guide.id.split('/').filter(p => p);
  return parts.length >= 2; // At least category/filename
});

// Enrich guide data with metadata from paths
allGuides = allGuides.map(enrichGuideData);

// Group guides by category -> vendor -> guide
// Handle both 4-part paths (with guide) and 3-part paths (without guide)
const groupedGuides: Record<string, Record<string, Record<string, typeof allGuides>>> = {};

allGuides.forEach(guide => {
  const category = guide.data.category?.trim() || '';
  const vendor = guide.data.vendor?.trim() || '';
  const guideName = guide.data.guide?.trim() || '';
  
  // Require at least category and vendor
  if (!category || !vendor) return;
  
  // For 3-part paths (no guide), use a default name or the filename
  const finalGuideName = guideName || 'general';
  
  if (!groupedGuides[category]) {
    groupedGuides[category] = {};
  }
  if (!groupedGuides[category][vendor]) {
    groupedGuides[category][vendor] = {};
  }
  if (!groupedGuides[category][vendor][finalGuideName]) {
    groupedGuides[category][vendor][finalGuideName] = [];
  }
  
  groupedGuides[category][vendor][finalGuideName].push(guide);
});

// Get all unique categories, vendors, and guides for filters
const allCategories = [...new Set(allGuides.map(c => c.data.category).filter(Boolean))].sort();
const allVendors = [...new Set(allGuides.map(c => c.data.vendor).filter(Boolean))].sort();
const allGuideNames = [...new Set(allGuides.map(c => c.data.certification).filter(Boolean))].sort();

// Get URL search params for filtering
const url = Astro.url;
const categoryFilter = url.searchParams.get('category') || '';
const vendorFilter = url.searchParams.get('vendor') || '';
const guideFilter = url.searchParams.get('certification') || '';
const searchQuery = url.searchParams.get('search') || '';

// Filter grouped guides based on URL params
let filteredGroupedGuides = { ...groupedGuides };
if (categoryFilter) {
  filteredGroupedGuides = { [categoryFilter]: filteredGroupedGuides[categoryFilter] || {} };
}
if (vendorFilter && categoryFilter) {
  filteredGroupedGuides = {
    [categoryFilter]: { [vendorFilter]: filteredGroupedGuides[categoryFilter]?.[vendorFilter] || {} }
  };
}
