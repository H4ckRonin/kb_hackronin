  <script>
    // Global state management
    let selectedFilters = {
      category: '',
      vendor: '',
      guide: ''
    };

    // Function to get current filters from URL
    function getCurrentFilters() {
      const urlParams = new URLSearchParams(window.location.search);
      return {
        category: urlParams.get('category') || '',
        vendor: urlParams.get('vendor') || '',
        guide: urlParams.get('guide') || '',
        search: urlParams.get('search') || ''
      };
    }

    // Helper function to ensure content is rendered before animation
    // This is critical for fast scrolling scenarios
    function ensureContentRendered(element, contentSelector, expandedClass) {
      if (!element) return;
      
      const content = contentSelector ? element.querySelector(contentSelector) : element;
      if (!content) return;
      
      // First, temporarily remove max-height constraint to measure actual height
      const wasExpanded = element.classList.contains(expandedClass);
      const originalMaxHeight = content.style.maxHeight;
      const originalTransition = content.style.transition;
      
      // Temporarily disable transition and set max-height to auto to measure
      content.style.transition = 'none';
      if (!wasExpanded) {
        element.classList.add(expandedClass);
        content.style.maxHeight = 'none';
      }
      
      // Force layout calculation
      void content.offsetHeight;
      void content.scrollHeight;
      
      // Get the actual height
      const actualHeight = content.scrollHeight;
      
      // Reset to collapsed state temporarily
      if (!wasExpanded) {
        element.classList.remove(expandedClass);
        content.style.maxHeight = '0px';
      }
      
      // Force another layout
      void content.offsetHeight;
      
      // Now animate with explicit height
      requestAnimationFrame(() => {
        if (!wasExpanded) {
          element.classList.add(expandedClass);
        }
        content.style.maxHeight = actualHeight + 'px';
        content.style.transition = originalTransition || '';
        
        // Wait for transition to complete, then set to auto
        requestAnimationFrame(() => {
          requestAnimationFrame(() => {
            if (element.classList.contains(expandedClass)) {
              content.style.maxHeight = '';
            }
          });
        });
      });
    }

    // Function to initialize filter state
    function initializeFilterState() {
      const current = getCurrentFilters();
      selectedFilters = {
        category: current.category,
        vendor: current.vendor,
        guide: current.guide
      };
      
      // Initialize filter chips with current state
      document.querySelectorAll('.filter-chip[data-filter-type]').forEach(chip => {
        const filterType = chip.dataset.filterType;
        const filterValue = chip.dataset.filterValue || '';
        
        chip.classList.remove('active', 'selected');
        if (selectedFilters[filterType] === filterValue) {
          chip.classList.add('active');
        }
      });
      
      updateApplyButton();
    }

    // Function to update apply button state
    function updateApplyButton() {
      const applyFiltersBtn = document.getElementById('apply-filters-btn');
      if (!applyFiltersBtn) return;
      
      const current = getCurrentFilters();
      const hasChanges = 
        selectedFilters.category !== current.category ||
        selectedFilters.vendor !== current.vendor ||
        selectedFilters.guide !== current.guide;
      
      if (hasChanges) {
        applyFiltersBtn.disabled = false;
        applyFiltersBtn.style.opacity = '1';
      } else {
        applyFiltersBtn.disabled = true;
        applyFiltersBtn.style.opacity = '0.5';
      }
    }

    // Function to initialize all event listeners
    function initializeGuidesPage() {
      const searchInput = document.getElementById('search-input');
      const guidesList = document.getElementById('guides-list');
      const resultsCount = document.getElementById('results-count');
      const noResults = document.getElementById('no-results');
      const guideCards = Array.from(document.querySelectorAll('.guide-card'));
      const filterToggleBtn = document.getElementById('filter-toggle-btn');
      const filtersRow = document.getElementById('filters-row');

      // Get current filters from URL
      const current = getCurrentFilters();
      const currentCategoryFilter = current.category;
      const currentVendorFilter = current.vendor;
      const currentGuideFilter = current.guide;
      const currentSearchQuery = current.search;

      // Initialize filter state
      initializeFilterState();

      // Show filters if there are active filters
      if (filterToggleBtn && filtersRow) {
        if (currentCategoryFilter || currentVendorFilter || currentGuideFilter) {
          filtersRow.classList.add('show');
          filterToggleBtn.classList.add('active');
        }
      }

      // Set search input value
      if (searchInput) {
        searchInput.value = currentSearchQuery;
      }

      // Make category headers show pointer cursor
      document.querySelectorAll('.category-header').forEach(header => {
        header.style.cursor = 'pointer';
      });

      // Apply search after initialization
      applySearch();
    }

    // Global search functionality
    function applySearch() {
      const searchInput = document.getElementById('search-input');
      const guidesList = document.getElementById('guides-list');
      const resultsCount = document.getElementById('results-count');
      const noResults = document.getElementById('no-results');
      const guideCards = Array.from(document.querySelectorAll('.guide-card'));
      const categorySections = document.querySelectorAll('.category-section');
      
      if (!searchInput) return;
      
      const current = getCurrentFilters();
      const searchTerm = searchInput.value.toLowerCase().trim();
      let visibleCount = 0;
      
      guideCards.forEach(card => {
        const searchable = card.dataset.searchable || '';
        const matchesSearch = !searchTerm || searchable.includes(searchTerm);
        
        // Category filter
        const matchesCategory = !current.category || card.dataset.category === current.category;
        
        // Vendor filter
        const matchesVendor = !current.vendor || card.dataset.vendor === current.vendor;
        
        // Guideification filter
        const matchesGuide = !current.guide || card.dataset.guide === current.guide;
        
        const visible = matchesSearch && matchesCategory && matchesVendor && matchesGuide;
        
        if (visible) {
          card.style.display = '';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      // Show/hide category sections based on visible cards
      categorySections.forEach(section => {
        const cardsInCategory = Array.from(section.querySelectorAll('.guide-card'));
        const visibleCardsInCategory = cardsInCategory.filter(card => card.style.display !== 'none');
        
        if (visibleCardsInCategory.length === 0) {
          section.style.display = 'none';
        } else {
          section.style.display = '';
        }
      });

      // Update results count
      if (resultsCount) {
        resultsCount.textContent = `${visibleCount} guide${visibleCount === 1 ? '' : 's'}`;
      }

      // Show/hide empty state
      if (noResults) {
        if (visibleCount === 0) {
          noResults.style.display = 'block';
          if (guidesList) guidesList.style.display = 'none';
        } else {
          noResults.style.display = 'none';
          if (guidesList) guidesList.style.display = '';
        }
      }
    }

    // Document-level event delegation for ALL interactive elements
    // This ensures everything works even after cache restore
    document.addEventListener('click', function(e) {
      // Filter toggle button
      if (e.target.closest('#filter-toggle-btn')) {
        const btn = e.target.closest('#filter-toggle-btn');
        const filtersRow = document.getElementById('filters-row');
        if (btn && filtersRow) {
          e.preventDefault();
          e.stopPropagation();
          filtersRow.classList.toggle('show');
          btn.classList.toggle('active');
        }
        return;
      }

      // Filter chips
      const filterChip = e.target.closest('.filter-chip[data-filter-type]');
      if (filterChip) {
        e.preventDefault();
        e.stopPropagation();
        const filterType = filterChip.dataset.filterType;
        const filterValue = filterChip.dataset.filterValue || '';
        
        // Update selected filter
        selectedFilters[filterType] = filterValue;
        
        // Update visual state for this filter type
        document.querySelectorAll(`.filter-chip[data-filter-type="${filterType}"]`).forEach(c => {
          c.classList.remove('active', 'selected');
        });
        
        // If "All" is selected, remove the filter
        if (filterValue === '') {
          selectedFilters[filterType] = '';
          filterChip.classList.add('active');
        } else {
          filterChip.classList.add('selected');
        }
        
        // Update apply button state
        updateApplyButton();
        return;
      }

      // Apply filters button
      if (e.target.closest('#apply-filters-btn')) {
        const btn = e.target.closest('#apply-filters-btn');
        if (btn && !btn.disabled) {
          e.preventDefault();
          const current = getCurrentFilters();
          const params = new URLSearchParams();
          
          if (selectedFilters.category) params.set('category', selectedFilters.category);
          if (selectedFilters.vendor) params.set('vendor', selectedFilters.vendor);
          if (selectedFilters.guide) params.set('guide', selectedFilters.guide);
          if (current.search) params.set('search', current.search);
          
          const newUrl = params.toString() ? `/guides?${params.toString()}` : '/guides';
          window.location.href = newUrl;
        }
        return;
      }

      // Remove filter buttons
      if (e.target.closest('[data-remove-category]')) {
        e.preventDefault();
        const params = new URLSearchParams(window.location.search);
        params.delete('category');
        const newUrl = params.toString() ? `/guides?${params.toString()}` : '/guides';
        window.location.href = newUrl;
        return;
      }

      if (e.target.closest('[data-remove-vendor]')) {
        e.preventDefault();
        const params = new URLSearchParams(window.location.search);
        params.delete('vendor');
        const newUrl = params.toString() ? `/guides?${params.toString()}` : '/guides';
        window.location.href = newUrl;
        return;
      }

      if (e.target.closest('[data-remove-guide]')) {
        e.preventDefault();
        const params = new URLSearchParams(window.location.search);
        params.delete('guide');
        const newUrl = params.toString() ? `/guides?${params.toString()}` : '/guides';
        window.location.href = newUrl;
        return;
      }

      // Vendor toggle (vendor-section)
      const vendorHeader = e.target.closest('[data-toggle-vendor]');
      if (vendorHeader) {
        e.stopPropagation();
        const section = vendorHeader.closest('.vendor-section');
        if (section) {
          const isCurrentlyCollapsed = section.classList.contains('collapsed');
          
          if (isCurrentlyCollapsed) {
            // Expanding - ensure content is rendered before animation
            section.classList.remove('collapsed');
            // Force multiple reflows to ensure content is fully rendered
            requestAnimationFrame(() => {
              void section.offsetHeight;
              const content = section.querySelector('.vendor-content');
              if (content) {
                void content.offsetHeight;
                // Force rendering of all child elements
                const children = content.querySelectorAll('*');
                children.forEach(child => void child.offsetHeight);
                // Additional frame to ensure everything is painted
                requestAnimationFrame(() => {
                  void content.offsetHeight;
                  requestAnimationFrame(() => {
                    void content.offsetHeight;
                  });
                });
              }
            });
          } else {
            // Collapsing - can animate immediately
            section.classList.add('collapsed');
          }
        }
        return;
      }

      // Vendor-item toggle (in drawer)
      const vendorItemHeader = e.target.closest('.vendor-header');
      if (vendorItemHeader && vendorItemHeader.closest('.vendor-item')) {
        e.stopPropagation();
        const vendorItem = vendorItemHeader.closest('.vendor-item');
        if (vendorItem) {
          const isCurrentlyExpanded = vendorItem.classList.contains('expanded');
          
          if (!isCurrentlyExpanded) {
            // Expanding - use robust rendering approach
            ensureContentRendered(vendorItem, '.vendor-content', 'expanded');
          } else {
            // Collapsing - can animate immediately
            vendorItem.classList.remove('expanded');
          }
        }
        return;
      }

      // Guide-item toggle (in drawer)
      const guideItemHeader = e.target.closest('.guide-item-header');
      if (guideItemHeader) {
        e.stopPropagation();
        const guideItem = guideItemHeader.closest('.guide-item');
        if (guideItem) {
          const isCurrentlyExpanded = guideItem.classList.contains('expanded');
          
          if (!isCurrentlyExpanded) {
            // Expanding - use robust rendering approach
            ensureContentRendered(guideItem, '.guide-item-content', 'expanded');
          } else {
            // Collapsing - can animate immediately
            guideItem.classList.remove('expanded');
          }
        }
        return;
      }
    });

    // Search input handler - use event delegation
    let searchTimeout;
    document.addEventListener('input', function(e) {
      if (e.target.id === 'search-input') {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          const params = new URLSearchParams(window.location.search);
          if (e.target.value.trim()) {
            params.set('search', e.target.value.trim());
          } else {
            params.delete('search');
          }
          const newUrl = params.toString() ? `/guides?${params.toString()}` : '/guides';
          window.history.pushState({}, '', newUrl);
          
          // Apply search immediately
          applySearch();
        }, 300);
      }
    });

    // Search input Enter key handler
    document.addEventListener('keydown', function(e) {
      if (e.target.id === 'search-input' && e.key === 'Enter') {
        e.preventDefault();
        clearTimeout(searchTimeout);
        const params = new URLSearchParams(window.location.search);
        if (e.target.value.trim()) {
          params.set('search', e.target.value.trim());
        } else {
          params.delete('search');
        }
        const newUrl = params.toString() ? `/guides?${params.toString()}` : '/guides';
        window.history.pushState({}, '', newUrl);
        
        // Apply search immediately
        applySearch();
      }
    });

    // Category drawer functionality
    function openCategoryDrawer(categoryName, categoryIconName, vendorsData) {
      const overlay = document.getElementById('category-drawer-overlay');
      const drawer = document.getElementById('category-drawer');
      const titleText = document.getElementById('category-drawer-title-text');
      const icon = document.getElementById('category-drawer-icon');
      const content = document.getElementById('category-drawer-content');
      
      if (!overlay || !drawer || !titleText || !content) return;
      
      // Set title and icon
      titleText.textContent = categoryName.replace(/-/g, ' ');
      
      // Set icon - clone from category card
      const categorySection = document.querySelector(`[data-category="${categoryName}"]`);
      if (categorySection) {
        const originalIcon = categorySection.querySelector('.category-icon-wrapper .icon');
        if (originalIcon) {
          icon.innerHTML = originalIcon.innerHTML;
        } else {
          const iconWrapper = categorySection.querySelector('.category-icon-wrapper');
          if (iconWrapper) {
            const svg = iconWrapper.querySelector('svg');
            if (svg) {
              icon.innerHTML = svg.outerHTML;
            }
          }
        }
      }
      
      // Store current view state
      content.dataset.currentView = 'guides';
      content.dataset.categoryName = categoryName;
      content.dataset.vendorsData = JSON.stringify(vendorsData);
      
      // Build icon grid layout for guides
      buildGuidesView(content, vendorsData, categoryName);
      
      // Force multiple reflows to ensure content is fully rendered before animation
      // This prevents content from not showing when scrolling fast
      void content.offsetHeight;
      void drawer.offsetHeight;
      
      // Use multiple requestAnimationFrame calls to ensure DOM is fully updated
      requestAnimationFrame(() => {
        // Force reflow of all child elements
        const allChildren = content.querySelectorAll('*');
        allChildren.forEach(child => void child.offsetHeight);
        void content.offsetHeight;
        void drawer.offsetHeight;
        
        // Another frame to ensure everything is painted
        requestAnimationFrame(() => {
          void content.offsetHeight;
          void drawer.offsetHeight;
          
          // Now trigger the animation
          requestAnimationFrame(() => {
            overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // One more frame after animation starts to ensure content is visible
            requestAnimationFrame(() => {
              void content.offsetHeight;
              // Force rendering of all visible elements
              const visibleElements = content.querySelectorAll('.drawer-nav-link, .drawer-nav-section');
              visibleElements.forEach(el => void el.offsetHeight);
            });
          });
        });
      });
    }

    function closeCategoryDrawer() {
      const overlay = document.getElementById('category-drawer-overlay');
      if (overlay) {
        overlay.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    function buildGuidesView(content, vendorsData, categoryName) {
      if (!vendorsData || vendorsData.length === 0) {
        const emptyMsg = document.createElement('div');
        emptyMsg.style.textAlign = 'center';
        emptyMsg.style.padding = '3rem 2rem';
        emptyMsg.style.color = 'var(--text-muted, #999)';
        emptyMsg.innerHTML = '<p style="margin: 0; font-size: 1rem;">No guides found in this category.</p>';
        content.innerHTML = '';
        content.appendChild(emptyMsg);
        return;
      }
      
      const container = document.createElement('div');
      
      vendorsData.forEach(([vendor, guides]) => {
        if (guides && guides.length > 0) {
          // Create section
          const section = document.createElement('div');
          section.className = 'drawer-nav-section';
          
          // Section header with icon
          const sectionHeader = document.createElement('div');
          sectionHeader.className = 'drawer-nav-section-header';
          
          const headerIcon = document.createElement('span');
          headerIcon.className = 'drawer-nav-section-icon';
          headerIcon.innerHTML = `
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
            </svg>
          `;
          
          const headerText = document.createTextNode(vendor.replace(/-/g, ' '));
          sectionHeader.appendChild(headerIcon);
          sectionHeader.appendChild(headerText);
          
          // Navigation list - use div instead of ul for better grid control
          const navList = document.createElement('div');
          navList.className = 'drawer-nav-list';
          navList.style.display = 'grid';
          navList.style.gridTemplateColumns = 'repeat(auto-fill, minmax(140px, 1fr))';
          navList.style.gap = '1rem';
          navList.style.rowGap = '1rem';
          navList.style.columnGap = '1rem';
          navList.style.width = '100%';
          
          // Set columns based on screen size
          if (window.innerWidth >= 768) {
            navList.style.gridTemplateColumns = 'repeat(3, 1fr)';
          } else if (window.innerWidth >= 480) {
            navList.style.gridTemplateColumns = 'repeat(2, 1fr)';
          }
          
          guides
            .filter(([guideName]) => guideName !== 'general') // Filter out "general" placeholder guides
            .forEach(([guideName, files]) => {
            // Check if this guide only has a README file
            // All guides show as coming soon (greyed out)
            const isReadmeOnly = guideName !== 'general'; // Always show as coming soon for non-general guides
            
            if (isReadmeOnly) {
              // Create a "coming soon" indicator instead of a clickable link
              const comingSoonCard = document.createElement('div');
              comingSoonCard.className = 'drawer-nav-link';
              comingSoonCard.style.setProperty('background', 'rgba(255, 255, 255, 0.02)', 'important');
              comingSoonCard.style.setProperty('background-color', 'rgba(255, 255, 255, 0.02)', 'important');
              comingSoonCard.style.setProperty('border', '2px dashed rgba(212, 183, 140, 0.3)', 'important');
              comingSoonCard.style.setProperty('color', '#e6e0d6', 'important');
              comingSoonCard.style.setProperty('aspect-ratio', '1 / 1', 'important');
              comingSoonCard.style.setProperty('min-height', '120px', 'important');
              comingSoonCard.style.setProperty('width', '100%', 'important');
              comingSoonCard.style.setProperty('cursor', 'default', 'important');
              comingSoonCard.style.setProperty('display', 'flex', 'important');
              comingSoonCard.style.setProperty('flex-direction', 'column', 'important');
              comingSoonCard.style.setProperty('align-items', 'center', 'important');
              comingSoonCard.style.setProperty('justify-content', 'center', 'important');
              comingSoonCard.style.setProperty('gap', '0.75rem', 'important');
              comingSoonCard.style.setProperty('padding', '1rem', 'important');
              
              // Icon
              const iconWrapper = document.createElement('div');
              iconWrapper.style.cssText = 'display: flex; align-items: center; justify-content: center; width: 48px; height: 48px; background: rgba(212, 183, 140, 0.15); border-radius: 50%; color: #d4b78c;';
              iconWrapper.innerHTML = `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>`;
              
              // Text
              const text = document.createElement('span');
              text.className = 'drawer-nav-link-text';
              text.textContent = generateTitleFromFilename(guideName);
              text.style.setProperty('font-size', '1rem', 'important');
              text.style.setProperty('text-align', 'center', 'important');
              text.style.setProperty('margin-bottom', '0.5rem', 'important');
              
              // Coming soon label
              const comingSoonLabel = document.createElement('span');
              comingSoonLabel.textContent = 'Coming Soon';
              comingSoonLabel.style.cssText = 'font-size: 0.75rem; font-weight: 600; color: #d4b78c; text-transform: uppercase; letter-spacing: 0.05em; font-family: "Poppins", sans-serif;';
              
              comingSoonCard.appendChild(text);
              comingSoonCard.appendChild(iconWrapper);
              comingSoonCard.appendChild(comingSoonLabel);
              
              navList.appendChild(comingSoonCard);
            } else {
            const navLink = document.createElement('button');
            navLink.className = 'drawer-nav-link';
            navLink.type = 'button';
            navLink.style.setProperty('background', 'rgba(255, 255, 255, 0.02)', 'important');
            navLink.style.setProperty('background-color', 'rgba(255, 255, 255, 0.02)', 'important');
            navLink.style.setProperty('border', '1px solid var(--border-color, #222)', 'important');
            navLink.style.setProperty('color', '#e6e0d6', 'important');
            navLink.style.setProperty('aspect-ratio', '1 / 1', 'important');
            navLink.style.setProperty('min-height', '120px', 'important');
            navLink.style.setProperty('width', '100%', 'important');
            navLink.dataset.guideName = guideName;
            navLink.dataset.files = JSON.stringify(files);
            navLink.dataset.vendor = vendor;
            
            // Text - capitalize (no icon), centered
            const text = document.createElement('span');
            text.className = 'drawer-nav-link-text';
            text.textContent = generateTitleFromFilename(guideName);
            text.style.setProperty('font-size', '1.1rem', 'important');
            text.style.setProperty('display', 'flex', 'important');
            text.style.setProperty('align-items', 'center', 'important');
            text.style.setProperty('justify-content', 'center', 'important');
            text.style.setProperty('text-align', 'center', 'important');
            text.style.setProperty('width', '100%', 'important');
            text.style.setProperty('height', '100%', 'important');
            text.style.setProperty('flex', '1', 'important');
            
            navLink.appendChild(text);
            
            // Badge
            if (files && files.length > 0) {
              const badge = document.createElement('span');
              badge.className = 'drawer-nav-link-badge';
              badge.textContent = files.length > 99 ? '99+' : files.length.toString();
              badge.style.position = 'absolute';
              badge.style.top = '0.25rem';
              badge.style.right = '0.25rem';
              navLink.appendChild(badge);
            }
            
            navList.appendChild(navLink);
            }
          });
          
          section.appendChild(sectionHeader);
          section.appendChild(navList);
          container.appendChild(section);
        }
      });
      
      content.innerHTML = '';
      content.appendChild(container);
      
      // Force multiple reflows to ensure content is fully rendered
      // Critical for fast scrolling scenarios
      void content.offsetHeight;
      requestAnimationFrame(() => {
        void content.offsetHeight;
        // Force rendering of all child elements
        const allChildren = container.querySelectorAll('*');
        allChildren.forEach(child => void child.offsetHeight);
        void container.offsetHeight;
        requestAnimationFrame(() => {
          void content.offsetHeight;
        });
      });
    }

    function buildFilesView(content, guideName, files, categoryName, vendor) {
      // Update drawer header title
      const titleText = document.getElementById('category-drawer-title-text');
      if (titleText) {
        const guideTitle = generateTitleFromFilename(guideName);
        titleText.textContent = guideTitle;
      }
      
      // Store current state for back navigation
      content.dataset.currentGuideName = guideName;
      content.dataset.currentVendor = vendor || '';
      
      // Create back button
      const backButton = document.createElement('button');
      backButton.className = 'drawer-back-button';
      backButton.type = 'button';
      backButton.innerHTML = `
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        <span>Back to Guides</span>
      `;
      backButton.addEventListener('click', () => {
        const vendorsDataStr = content.dataset.vendorsData;
        if (vendorsDataStr) {
          try {
            const vendorsData = JSON.parse(vendorsDataStr);
            buildGuidesView(content, vendorsData, categoryName);
            content.dataset.currentView = 'guides';
            // Restore original category title
            if (titleText) {
              titleText.textContent = categoryName.replace(/-/g, ' ');
            }
            // Force reflow to ensure content is rendered
            requestAnimationFrame(() => {
              void content.offsetHeight;
            });
          } catch (err) {
            if (import.meta.env.DEV) {
              console.error('Error:', err);
            }
          }
        }
      });
      
      // Create file list using best practice navigation
      const fileList = document.createElement('div');
      fileList.className = 'drawer-nav-list';
      fileList.style.display = 'grid';
      fileList.style.gridTemplateColumns = 'repeat(auto-fill, minmax(140px, 1fr))';
      fileList.style.gap = '1rem';
      fileList.style.rowGap = '1rem';
      fileList.style.columnGap = '1rem';
      fileList.style.width = '100%';
      
      // Set columns based on screen size
      if (window.innerWidth >= 768) {
        fileList.style.gridTemplateColumns = 'repeat(3, 1fr)';
      } else if (window.innerWidth >= 480) {
        fileList.style.gridTemplateColumns = 'repeat(2, 1fr)';
      }
      
      if (!files || files.length === 0) {
        const emptyMsg = document.createElement('div');
        emptyMsg.style.textAlign = 'center';
        emptyMsg.style.padding = '3rem 2rem';
        emptyMsg.style.color = 'var(--text-muted, #999)';
        emptyMsg.innerHTML = '<p style="margin: 0; font-size: 1rem;">No files found for this guide.</p>';
        content.innerHTML = '';
        content.appendChild(backButton);
        content.appendChild(emptyMsg);
        content.dataset.currentView = 'files';
        // Force reflow to ensure content is rendered
        requestAnimationFrame(() => {
          void content.offsetHeight;
        });
        return;
      }
      
      // Sort files by title for consistent ordering
      const sortedFiles = [...files].sort((a, b) => {
        const titleA = (a.title || '').toLowerCase();
        const titleB = (b.title || '').toLowerCase();
        return titleA.localeCompare(titleB);
      });
      
      sortedFiles.forEach((file, index) => {
        const fileLink = document.createElement('a');
        fileLink.className = 'drawer-nav-link';
        fileLink.style.setProperty('background', 'rgba(255, 255, 255, 0.02)', 'important');
        fileLink.style.setProperty('background-color', 'rgba(255, 255, 255, 0.02)', 'important');
        fileLink.style.setProperty('border', '1px solid var(--border-color, #222)', 'important');
        fileLink.style.setProperty('color', '#e6e0d6', 'important');
        fileLink.style.setProperty('aspect-ratio', '1 / 1', 'important');
        fileLink.style.setProperty('min-height', '120px', 'important');
        fileLink.style.setProperty('width', '100%', 'important');
        fileLink.href = file.href;
        
        // Text - centered in middle of card, no icon
        const text = document.createElement('span');
        text.className = 'drawer-nav-link-text';
        text.textContent = file.title || 'Untitled';
        text.style.setProperty('font-size', '1.1rem', 'important');
        text.style.setProperty('display', 'flex', 'important');
        text.style.setProperty('align-items', 'center', 'important');
        text.style.setProperty('justify-content', 'center', 'important');
        text.style.setProperty('text-align', 'center', 'important');
        text.style.setProperty('width', '100%', 'important');
        text.style.setProperty('height', '100%', 'important');
        text.style.setProperty('flex', '1', 'important');
        
        // Number badge
        const badge = document.createElement('span');
        badge.className = 'drawer-nav-link-badge';
        badge.textContent = (index + 1).toString();
        
        fileLink.appendChild(text);
        fileLink.appendChild(badge);
        fileList.appendChild(fileLink);
      });
      
      content.innerHTML = '';
      content.appendChild(backButton);
      content.appendChild(fileList);
      content.dataset.currentView = 'files';
      
      // Force multiple reflows to ensure content is fully rendered
      // Critical for fast scrolling scenarios
      void content.offsetHeight;
      requestAnimationFrame(() => {
        void content.offsetHeight;
        // Force rendering of all child elements
        const allChildren = fileList.querySelectorAll('*');
        allChildren.forEach(child => void child.offsetHeight);
        void fileList.offsetHeight;
        requestAnimationFrame(() => {
          void content.offsetHeight;
        });
      });
    }

    // Document-level event delegation for category clicks - ALWAYS ACTIVE
    (function() {
      function handleCategoryClick(e) {
        // Handle category header clicks - open drawer
        const categoryHeader = e.target.closest('.category-header');
        if (categoryHeader && !e.target.closest('.category-drawer')) {
          e.stopPropagation();
          
          const section = categoryHeader.closest('.category-section');
          if (section) {
            // Get drawer elements directly
            let overlay = document.getElementById('category-drawer-overlay');
            
            if (!overlay) {
              setTimeout(() => {
                overlay = document.getElementById('category-drawer-overlay');
                if (overlay && typeof openCategoryDrawer === 'function') {
                  const categoryName = categoryHeader.dataset.categoryName;
                  const categoryIconName = categoryHeader.dataset.categoryIcon;
                  const vendorsDataStr = section.dataset.vendors;
                  if (categoryName && vendorsDataStr) {
                    try {
                      const vendorsData = JSON.parse(vendorsDataStr);
                      openCategoryDrawer(categoryName, categoryIconName, vendorsData);
                    } catch (err) {
                      if (import.meta.env.DEV) {
                        console.error('Error:', err);
                      }
                    }
                  }
                }
              }, 100);
              return;
            }
            
            // Get data from attributes
            const categoryName = categoryHeader.dataset.categoryName;
            const categoryIconName = categoryHeader.dataset.categoryIcon;
            const vendorsDataStr = section.dataset.vendors;
            
            if (!categoryName || !vendorsDataStr) {
              return;
            }
            
            try {
              const vendorsData = JSON.parse(vendorsDataStr);
              if (typeof openCategoryDrawer === 'function') {
                openCategoryDrawer(categoryName, categoryIconName, vendorsData);
              }
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error parsing vendors data:', err);
              }
            }
            return;
          }
        }
      }
      
      // Attach the listener immediately
      document.addEventListener('click', handleCategoryClick, true);
    })();

    // Handle guide link clicks in drawer - use event delegation
    (function() {
      function handleGuideificationClick(e) {
        const guideLink = e.target.closest('.drawer-nav-link[data-guide-name]');
        if (guideLink) {
          e.preventDefault();
          e.stopPropagation();
          
          const content = document.getElementById('category-drawer-content');
          if (!content) return;
          
          const guideName = guideLink.dataset.guideName;
          const filesStr = guideLink.dataset.files;
          const vendor = guideLink.dataset.vendor || '';
          const categoryName = content.dataset.categoryName;
          
          if (guideName && filesStr && categoryName) {
            try {
              const files = JSON.parse(filesStr);
              buildFilesView(content, guideName, files, categoryName, vendor);
              // Force reflow to ensure content is rendered after building
              requestAnimationFrame(() => {
                void content.offsetHeight;
              });
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error parsing files:', err);
              }
            }
          }
          return;
        }
      }
      
      // Attach the listener immediately
      document.addEventListener('click', handleGuideificationClick, true);
    })();

    // Close drawer handlers - use document-level delegation
    (function() {
      function handleDrawerClose(e) {
        // Close button click
        if (e.target.closest('#category-drawer-close')) {
          e.preventDefault();
          e.stopPropagation();
          closeCategoryDrawer();
          return;
        }
        
        // Overlay click (outside drawer)
        const overlay = document.getElementById('category-drawer-overlay');
        if (overlay && e.target === overlay) {
          closeCategoryDrawer();
          return;
        }
      }
      
      // Attach the listener immediately
      document.addEventListener('click', handleDrawerClose, true);
    })();

    // Close drawer on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const overlay = document.getElementById('category-drawer-overlay');
        if (overlay && overlay.classList.contains('active')) {
          closeCategoryDrawer();
        }
      }
    });

    // Helper function to generate title from filename (for JavaScript)
    function generateTitleFromFilename(filename) {
      return filename
        .replace(/^\d+-/, '')
        .replace(/-/g, ' ')
        .replace(/\b\w/g, l => l.toUpperCase());
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        initializeGuidesPage();
      });
    } else {
      initializeGuidesPage();
    }

    // Re-initialize when page is shown (handles back/forward navigation)
    window.addEventListener('pageshow', function(event) {
      // Small delay to ensure DOM is ready after cache restore
      setTimeout(() => {
        // Re-initialize everything (includes applySearch)
        initializeGuidesPage();
        
        // Ensure category headers have pointer cursor
        document.querySelectorAll('.category-header').forEach(header => {
          header.style.cursor = 'pointer';
        });
      }, 50);
    });

    // Re-initialize on Astro page transitions
    document.addEventListener('astro:page-load', function() {
      setTimeout(() => {
        initializeGuidesPage();
        applySearch();
      }, 50);
    });

    // Handle fast scrolling - ensure content is rendered when it comes into view
    let scrollTimeout;
    let lastScrollTime = 0;
    window.addEventListener('scroll', function() {
      const now = Date.now();
      const timeSinceLastScroll = now - lastScrollTime;
      lastScrollTime = now;
      
      // Only process if scrolling very fast (less than 16ms between scroll events)
      // or if it's been a while since last scroll (user stopped scrolling)
      if (timeSinceLastScroll < 16 || timeSinceLastScroll > 100) {
        clearTimeout(scrollTimeout);
        
        scrollTimeout = setTimeout(() => {
          // Force rendering of visible expanded content
          requestAnimationFrame(() => {
            // Check all expanded vendor-items and guide-items in viewport
            const expandedVendorItems = document.querySelectorAll('.vendor-item.expanded .vendor-content');
            const expandedGuideItems = document.querySelectorAll('.guide-item.expanded .guide-item-content');
            const drawerContent = document.getElementById('category-drawer-content');
            
            // Force reflow of visible expanded content
            expandedVendorItems.forEach(content => {
              const rect = content.getBoundingClientRect();
              // Only process if element is in or near viewport
              if (rect.top < window.innerHeight + 200 && rect.bottom > -200) {
                void content.offsetHeight;
                const children = content.querySelectorAll('*');
                children.forEach(child => void child.offsetHeight);
              }
            });
            
            expandedGuideItems.forEach(content => {
              const rect = content.getBoundingClientRect();
              if (rect.top < window.innerHeight + 200 && rect.bottom > -200) {
                void content.offsetHeight;
                const children = content.querySelectorAll('*');
                children.forEach(child => void child.offsetHeight);
              }
            });
            
            // Also ensure drawer content is rendered if drawer is open
            if (drawerContent && document.getElementById('category-drawer-overlay')?.classList.contains('active')) {
              void drawerContent.offsetHeight;
              const visibleElements = drawerContent.querySelectorAll('.drawer-nav-link, .drawer-nav-section');
              visibleElements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight + 200 && rect.bottom > -200) {
                  void el.offsetHeight;
                }
              });
            }
          });
        }, 50);
      }
    }, { passive: true });
  </script>
