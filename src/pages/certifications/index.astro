              buildVendorCategoriesView(content, vendorName, categoriesData);
              content.dataset.currentView = 'categories';
              // Restore original vendor title
              if (titleText) {
                titleText.textContent = vendorName.replace(/-/g, ' ');
              }
              // Force reflow to ensure content is rendered
              requestAnimationFrame(() => {
                void content.offsetHeight;
              });
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error:', err);
              }
            }
          }
        } else {
          // Go back to certifications view
          const vendorsDataStr = content.dataset.vendorsData;
          if (vendorsDataStr) {
            try {
              const vendorsData = JSON.parse(vendorsDataStr);
              buildCertificationsView(content, vendorsData, categoryName);
              content.dataset.currentView = 'certifications';
              // Restore original category title
              if (titleText) {
                titleText.textContent = categoryName.replace(/-/g, ' ');
              }
              // Force reflow to ensure content is rendered
              requestAnimationFrame(() => {
                void content.offsetHeight;
              });
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error:', err);
              }
            }
          }
        }
      });
      
      // Create file list using best practice navigation
      const fileList = document.createElement('div');
      fileList.className = 'drawer-nav-list';
      fileList.style.display = 'grid';
      fileList.style.gridTemplateColumns = 'repeat(auto-fill, minmax(140px, 1fr))';
      fileList.style.gap = '1rem';
      fileList.style.rowGap = '1rem';
      fileList.style.columnGap = '1rem';
      fileList.style.width = '100%';
      
      // Set columns based on screen size
      if (window.innerWidth >= 768) {
        fileList.style.gridTemplateColumns = 'repeat(3, 1fr)';
      } else if (window.innerWidth >= 480) {
        fileList.style.gridTemplateColumns = 'repeat(2, 1fr)';
      }
      
      if (!normalizedFiles || normalizedFiles.length === 0) {
        const emptyMsg = document.createElement('div');
        emptyMsg.style.textAlign = 'center';
        emptyMsg.style.padding = '3rem 2rem';
        emptyMsg.style.color = 'var(--text-muted, #999)';
        emptyMsg.innerHTML = '<p style="margin: 0; font-size: 1rem;">No files found for this certification.</p>';
        content.innerHTML = '';
        content.appendChild(backButton);
        content.appendChild(emptyMsg);
        content.dataset.currentView = 'files';
        // Force reflow to ensure content is rendered
        requestAnimationFrame(() => {
          void content.offsetHeight;
        });
        return;
      }
      
      // Sort files by title for consistent ordering
      const sortedFiles = [...normalizedFiles].sort((a, b) => {
        const titleA = (a.title || '').toLowerCase();
        const titleB = (b.title || '').toLowerCase();
        return titleA.localeCompare(titleB);
      });
      
      sortedFiles.forEach((file, index) => {
        const fileLink = document.createElement('a');
        fileLink.className = 'drawer-nav-link';
        fileLink.style.setProperty('background', 'rgba(255, 255, 255, 0.02)', 'important');
        fileLink.style.setProperty('background-color', 'rgba(255, 255, 255, 0.02)', 'important');
        fileLink.style.setProperty('border', '1px solid var(--border-color, #222)', 'important');
        fileLink.style.setProperty('color', '#e6e0d6', 'important');
        fileLink.style.setProperty('aspect-ratio', '1 / 1', 'important');
        fileLink.style.setProperty('min-height', '120px', 'important');
        fileLink.style.setProperty('width', '100%', 'important');
        fileLink.href = file.href;
        
        // Text - centered in middle of card, no icon
        const text = document.createElement('span');
        text.className = 'drawer-nav-link-text';
        text.textContent = file.title || 'Untitled';
        text.style.setProperty('font-size', '1.1rem', 'important');
        text.style.setProperty('display', 'flex', 'important');
        text.style.setProperty('align-items', 'center', 'important');
        text.style.setProperty('justify-content', 'center', 'important');
        text.style.setProperty('text-align', 'center', 'important');
        text.style.setProperty('width', '100%', 'important');
        text.style.setProperty('height', '100%', 'important');
        text.style.setProperty('flex', '1', 'important');
        
        // Number badge
        const badge = document.createElement('span');
        badge.className = 'drawer-nav-link-badge';
        badge.textContent = (index + 1).toString();
        
        fileLink.appendChild(text);
        fileLink.appendChild(badge);
        fileList.appendChild(fileLink);
      });
      
      content.innerHTML = '';
      content.appendChild(backButton);
      content.appendChild(fileList);
      content.dataset.currentView = 'files';
      
      // Force multiple reflows to ensure content is fully rendered
      // Critical for fast scrolling scenarios
      void content.offsetHeight;
      requestAnimationFrame(() => {
        void content.offsetHeight;
        // Force rendering of all child elements
        const allChildren = fileList.querySelectorAll('*');
        allChildren.forEach(child => void child.offsetHeight);
        void fileList.offsetHeight;
        requestAnimationFrame(() => {
          void content.offsetHeight;
        });
      });
    }

    // Document-level event delegation for category clicks - ALWAYS ACTIVE
    (function() {
      function handleCategoryClick(e) {
        // Handle vendor view category card clicks (same pattern as category headers)
        // Check for vendor category cards first (more specific selector)
        const vendorCategoryCard = e.target.closest('.vendor-view-section .cert-card[data-vendor-name]');
        if (vendorCategoryCard && !e.target.closest('.category-drawer')) {
          // Don't trigger if clicking on the file-link
          if (e.target.closest('.file-link')) {
            return;
          }
          
          e.preventDefault();
          e.stopPropagation();
          
          const vendor = vendorCategoryCard.dataset.vendorName;
          const categoriesDataStr = vendorCategoryCard.dataset.categoriesData;
          
          // Debug in dev mode
          if (import.meta.env.DEV) {
            console.log('Vendor card clicked:', {
              vendor,
              hasData: !!categoriesDataStr,
              card: vendorCategoryCard,
              functionExists: typeof window.openVendorCategoriesDrawer === 'function'
            });
          }
          
          if (vendor && categoriesDataStr) {
            try {
              const categoriesData = JSON.parse(categoriesDataStr);
              // Try window scope first, then local scope
              const openDrawer = window.openVendorCategoriesDrawer || openVendorCategoriesDrawer;
              if (typeof openDrawer === 'function') {
                openDrawer(vendor, categoriesData);
              } else {
                console.error('openVendorCategoriesDrawer function not found');
              }
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error parsing categories data:', err);
              }
            }
          } else {
            if (import.meta.env.DEV) {
              console.warn('Missing vendor or categoriesData:', { vendor, hasCategoriesData: !!categoriesDataStr });
            }
          }
          return;
        }
        
        // Handle vendor header clicks in vendor view - must come before category header handler
        const vendorViewHeader = e.target.closest('.category-header[data-vendor-name]');
        if (vendorViewHeader && !e.target.closest('.category-drawer')) {
          const vendorSection = vendorViewHeader.closest('.vendor-view-section');
          if (vendorSection) {
            e.preventDefault();
            e.stopPropagation();
            
            const vendor = vendorViewHeader.dataset.vendorName;
            const categoriesDataStr = vendorSection.dataset.categories;
            
            if (vendor && categoriesDataStr) {
              try {
                const categoriesData = JSON.parse(categoriesDataStr);
                const openDrawer = window.openVendorCategoriesDrawer || openVendorCategoriesDrawer;
                if (typeof openDrawer === 'function') {
                  openDrawer(vendor, categoriesData);
                } else {
                  console.error('openVendorCategoriesDrawer function not found');
                }
              } catch (err) {
                if (import.meta.env.DEV) {
                  console.error('Error parsing categories data:', err);
                }
              }
            }
            return;
          }
        }
        
        // Handle category header clicks - open drawer
        const categoryHeader = e.target.closest('.category-header');
        if (categoryHeader && !e.target.closest('.category-drawer')) {
          // Skip vendor headers - they should be handled by the vendor header handler
          if (categoryHeader.dataset.vendorName || categoryHeader.closest('.vendor-view-section')) {
            return;
          }
          
          e.stopPropagation();
          
          const section = categoryHeader.closest('.category-section');
          if (section) {
            // Get drawer elements directly
            let overlay = document.getElementById('category-drawer-overlay');
            
            if (!overlay) {
              setTimeout(() => {
                overlay = document.getElementById('category-drawer-overlay');
                if (overlay && typeof openCategoryDrawer === 'function') {
                  const categoryName = categoryHeader.dataset.categoryName;
                  const categoryIconName = categoryHeader.dataset.categoryIcon;
                  const vendorsDataStr = section.dataset.vendors;
                  if (categoryName && vendorsDataStr) {
                    try {
                      const vendorsData = JSON.parse(vendorsDataStr);
                      openCategoryDrawer(categoryName, categoryIconName, vendorsData);
                    } catch (err) {
                      if (import.meta.env.DEV) {
                        console.error('Error:', err);
                      }
                    }
                  }
                }
              }, 100);
              return;
            }
            
            // Get data from attributes
            const categoryName = categoryHeader.dataset.categoryName;
            const categoryIconName = categoryHeader.dataset.categoryIcon;
            const vendorsDataStr = section.dataset.vendors;
            
            if (!categoryName || !vendorsDataStr) {
              return;
            }
            
            try {
              const vendorsData = JSON.parse(vendorsDataStr);
              if (typeof openCategoryDrawer === 'function') {
                openCategoryDrawer(categoryName, categoryIconName, vendorsData);
              }
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error parsing vendors data:', err);
              }
            }
            return;
          }
        }
      }
      
      // Attach the listener immediately
      document.addEventListener('click', handleCategoryClick, true);
    })();

    // Handle certification link clicks in drawer - use event delegation
    (function() {
      function handleCertificationClick(e) {
        const certLink = e.target.closest('.drawer-nav-link[data-cert-name]');
        if (certLink) {
          e.preventDefault();
          e.stopPropagation();
          
          const content = document.getElementById('category-drawer-content');
          if (!content) return;
          
          const certName = certLink.dataset.certName;
          const filesStr = certLink.dataset.files;
          const vendor = certLink.dataset.vendor || content.dataset.vendorName || '';
          const categoryName = content.dataset.categoryName || certLink.dataset.category || '';
          
          if (certName && filesStr && categoryName) {
            try {
              const files = JSON.parse(filesStr);
              buildFilesView(content, certName, files, categoryName, vendor);
              // Force reflow to ensure content is rendered after building
              requestAnimationFrame(() => {
                void content.offsetHeight;
              });
            } catch (err) {
              if (import.meta.env.DEV) {
                console.error('Error parsing files:', err);
              }
            }
          }
          return;
        }
      }
      
      // Attach the listener immediately
      document.addEventListener('click', handleCertificationClick, true);
    })();

    // Close drawer handlers - use document-level delegation
    (function() {
      function handleDrawerClose(e) {
        // Close button click
        if (e.target.closest('#category-drawer-close')) {
          e.preventDefault();
          e.stopPropagation();
          closeCategoryDrawer();
          return;
        }
        
        // Overlay click (outside drawer)
        const overlay = document.getElementById('category-drawer-overlay');
        if (overlay && e.target === overlay) {
          closeCategoryDrawer();
          return;
        }
      }
      
      // Attach the listener immediately
      document.addEventListener('click', handleDrawerClose, true);
    })();

    // Close drawer on ESC key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const overlay = document.getElementById('category-drawer-overlay');
        if (overlay && overlay.classList.contains('active')) {
          closeCategoryDrawer();
        }
      }
    });

    // Helper function to generate title from filename (for JavaScript)
    function generateTitleFromFilename(filename) {
      return filename
        .replace(/^\d+-/, '')
        .replace(/-/g, ' ')
        .replace(/\b\w/g, l => l.toUpperCase());
    }
    
    // Format certification name - uppercase except for Pentest+ and Security+
    function formatCertificationName(certName) {
      const normalized = certName.trim();
      const lowerNormalized = normalized.toLowerCase();
      
      // Check if it's Pentest+ or Security+ (case-insensitive)
      if (lowerNormalized === 'pentest+' || lowerNormalized === 'security+') {
        // Return with proper capitalization: Pentest+ or Security+
        return normalized.charAt(0).toUpperCase() + normalized.slice(1).toLowerCase();
      }
      
      // All other certifications should be uppercase
      return normalized.toUpperCase();
    }

    // Initialize on page load
    function initPage() {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeCertificationsPage);
      } else {
        initializeCertificationsPage();
      }
    }
    
    initPage();

    // Re-initialize when page is shown (handles back/forward navigation)
    window.addEventListener('pageshow', function(event) {
      setTimeout(() => {
        initializeCertificationsPage();
        document.querySelectorAll('.category-header').forEach(header => {
          header.style.cursor = 'pointer';
        });
      }, 50);
    });

    // Re-initialize on Astro page transitions
    document.addEventListener('astro:page-load', function() {
      setTimeout(() => {
        initializeCertificationsPage();
        applySearch();
      }, 50);
    });
    
    // Also handle after-swap for view transitions
    document.addEventListener('astro:after-swap', function() {
      setTimeout(() => {
        initializeCertificationsPage();
      }, 50);
    });

    // Handle fast scrolling - ensure content is rendered when it comes into view
    let scrollTimeout;
    let lastScrollTime = 0;
    window.addEventListener('scroll', function() {
      const now = Date.now();
      const timeSinceLastScroll = now - lastScrollTime;
      lastScrollTime = now;
      
      // Only process if scrolling very fast (less than 16ms between scroll events)
      // or if it's been a while since last scroll (user stopped scrolling)
      if (timeSinceLastScroll < 16 || timeSinceLastScroll > 100) {
        clearTimeout(scrollTimeout);
        
        scrollTimeout = setTimeout(() => {
          // Force rendering of visible expanded content
          requestAnimationFrame(() => {
            // Check all expanded vendor-items and cert-items in viewport
            const expandedVendorItems = document.querySelectorAll('.vendor-item.expanded .vendor-content');
            const expandedCertItems = document.querySelectorAll('.cert-item.expanded .cert-item-content');
            const drawerContent = document.getElementById('category-drawer-content');
            
            // Force reflow of visible expanded content
            expandedVendorItems.forEach(content => {
              const rect = content.getBoundingClientRect();
              // Only process if element is in or near viewport
              if (rect.top < window.innerHeight + 200 && rect.bottom > -200) {
                void content.offsetHeight;
                const children = content.querySelectorAll('*');
                children.forEach(child => void child.offsetHeight);
              }
            });
            
            expandedCertItems.forEach(content => {
              const rect = content.getBoundingClientRect();
              if (rect.top < window.innerHeight + 200 && rect.bottom > -200) {
                void content.offsetHeight;
                const children = content.querySelectorAll('*');
                children.forEach(child => void child.offsetHeight);
              }
            });
            
            // Also ensure drawer content is rendered if drawer is open
            if (drawerContent && document.getElementById('category-drawer-overlay')?.classList.contains('active')) {
              void drawerContent.offsetHeight;
              const visibleElements = drawerContent.querySelectorAll('.drawer-nav-link, .drawer-nav-section');
              visibleElements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight + 200 && rect.bottom > -200) {
                  void el.offsetHeight;
                }
              });
            }
          });
        }, 50);
      }
    }, { passive: true });
  </script>
