        const searchableText = (searchable + ' ' + cardTitle).toLowerCase();
        const matchesSearch = !searchTerm || searchableText.includes(searchTerm);
        
        // Category filter
        const matchesCategory = !current.category || card.dataset.category === current.category;
        
        // Vendor filter
        const matchesVendor = !current.vendor || card.dataset.vendor === current.vendor;
        
        // Certification filter (only for category view)
        const matchesCert = currentView === 'vendors' || !current.certification || card.dataset.certification === current.certification;
        
        const visible = matchesSearch && matchesCategory && matchesVendor && matchesCert;
        
        if (visible) {
          card.style.display = '';
          visibleCount++;
