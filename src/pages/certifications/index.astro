        {allCategories.length > 0 && (
          <div class="filter-section">
            <div class="filter-section-title">Categories</div>
            <div class="filter-chips">
              <button 
                type="button"
                class={`filter-chip filter-category ${!categoryFilter ? 'active' : ''}`}
                data-filter-type="category"
                data-filter-value=""
              >
                All
              </button>
              {allCategories.map(cat => (
                <button 
                  type="button"
                  class={`filter-chip filter-category ${categoryFilter === cat ? 'active' : ''}`}
                  data-filter-type="category"
                  data-filter-value={cat}
                >
                  {cat.replace(/-/g, ' ')}
                </button>
              ))}
            </div>
          </div>
        )}

        {allVendors.length > 0 && (
          <div class="filter-section">
            <div class="filter-section-title">Vendors</div>
            <div class="filter-chips">
              <button 
                type="button"
                class={`filter-chip filter-vendor ${!vendorFilter ? 'active' : ''}`}
                data-filter-type="vendor"
                data-filter-value=""
              >
                All
