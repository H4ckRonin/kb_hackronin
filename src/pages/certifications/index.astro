                <button 
                  type="button"
                  class={`filter-chip filter-vendor ${vendorFilter === vendor ? 'active' : ''}`}
                  data-filter-type="vendor"
                  data-filter-value={vendor}
                >
                  {vendor.replace(/-/g, ' ')}
