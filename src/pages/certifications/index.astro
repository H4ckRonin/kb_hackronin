import BaseLayout from '../../layouts/BaseLayout.astro';
import Icon from '../../components/Icons.astro';
import { getCollection } from 'astro:content';
import { enrichCertData, generateTitleFromFilename, formatCertificationName } from '../../utils/content';
import { withBase } from '../../utils/paths';

const title = 'Certifications - Knowledge Base';
const description = 'Comprehensive notes and cheat sheets for cybersecurity certifications';
const permalink = `${Astro.site.href}certifications`;

// Map category names to icon names with fallback
function getCategoryIcon(category: string): string {
  const categoryLower = category.toLowerCase().replace(/\s+/g, '-');
  const iconMap: Record<string, string> = {
    'active-directory': 'active-directory',
    'cloud': 'cloud',
    'defensive-security': 'defensive-security',
    'exploit-development-evasion': 'exploit-development-evasion',
    'infrastructure': 'infrastructure',
    'mobile-penetration-testing': 'mobile',
    'mobile': 'mobile',
    'stackable': 'stackable',
    'web-application': 'web-application',
    'security-assessment-testing': 'security-assessment-testing',
    'security-management-grc': 'security-management-grc',
    'software-security': 'software-security',
    'communication-network-security': 'communication-network-security',
    'iam': 'iam',
  };
  
  // Try exact match first
  if (iconMap[categoryLower]) {
    return iconMap[categoryLower];
  }
  
  // Try partial match (e.g., "mobile-penetration-testing" -> "mobile")
  for (const [key, icon] of Object.entries(iconMap)) {
    if (categoryLower.includes(key) || key.includes(categoryLower)) {
      return icon;
    }
  }
  
  // Fallback to general icon
  return 'general';
}

let allCerts = await getCollection('certifications');

// Filter out files that don't have at least 2 parts (category/filename minimum)
allCerts = allCerts.filter(cert => {
  const parts = cert.id.split('/').filter(p => p);
  return parts.length >= 2; // At least category/filename
});

// Enrich cert data with metadata from paths
allCerts = allCerts.map(enrichCertData);

// Group certifications by category -> vendor -> certification
// Handle both 4-part paths (with certification) and 3-part paths (without certification)
const groupedCerts: Record<string, Record<string, Record<string, typeof allCerts>>> = {};

allCerts.forEach(cert => {
  const category = cert.data.category?.trim() || '';
  const vendor = cert.data.vendor?.trim() || '';
  const certName = cert.data.certification?.trim() || '';
  
  // Require at least category and vendor
  if (!category || !vendor) return;
  
  // For 3-part paths (no certification), use a default name or the filename
  const finalCertName = certName || 'general';
  
  if (!groupedCerts[category]) {
    groupedCerts[category] = {};
  }
  if (!groupedCerts[category][vendor]) {
    groupedCerts[category][vendor] = {};
  }
  if (!groupedCerts[category][vendor][finalCertName]) {
    groupedCerts[category][vendor][finalCertName] = [];
  }
  
  groupedCerts[category][vendor][finalCertName].push(cert);
});

// Get all unique categories, vendors, and certifications for filters
const allCategories = [...new Set(allCerts.map(c => c.data.category).filter(Boolean))].sort();
const allVendors = [...new Set(allCerts.map(c => c.data.vendor).filter(Boolean))].sort();
const allCertifications = [...new Set(allCerts.map(c => c.data.certification).filter(Boolean))].sort();

// Get URL search params for filtering
const url = Astro.url;
const categoryFilter = url.searchParams.get('category') || '';
const vendorFilter = url.searchParams.get('vendor') || '';
const certFilter = url.searchParams.get('certification') || '';
const searchQuery = url.searchParams.get('search') || '';

// Filter grouped certs based on URL params
let filteredGroupedCerts = { ...groupedCerts };
if (categoryFilter) {
  filteredGroupedCerts = { [categoryFilter]: filteredGroupedCerts[categoryFilter] || {} };
}
if (vendorFilter && categoryFilter) {
  filteredGroupedCerts = {
    [categoryFilter]: { [vendorFilter]: filteredGroupedCerts[categoryFilter]?.[vendorFilter] || {} }
  };
}
