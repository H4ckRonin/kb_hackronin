            Object.entries(vendors).map(([vendor, certs]) => [
              vendor,
              Object.entries(certs)
                .filter(([certName]) => certName !== 'general') // Filter out "general" placeholder certifications
                .map(([certName, files]) => [
                certName,
                files.map(f => ({
                  title: f.data.title || generateTitleFromFilename(f.id.split('/').pop()?.replace('.md', '') || ''),
                  href: withBase(`/certifications/${f.id.replace(/\.md$/, '')}`)
