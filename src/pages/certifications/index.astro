        >
          <span id="view-toggle-icon">
            <Icon name="grid" size={18} />
          </span>
          <span id="view-toggle-text">Categories</span>
        </button>
        
        <button class="filter-toggle-btn" id="filter-toggle-btn">
          <Icon name="tags" size={18} />
          <span>Filters</span>
        </button>
        {(categoryFilter || vendorFilter || certFilter) && (
          <div class="active-filters" id="active-filters">
            {categoryFilter && (
              <div class="active-filter-badge">
                <span>Category: {categoryFilter.replace(/-/g, ' ')}</span>
                <button 
                  class="remove-filter" 
                  data-remove-category
                  title="Remove category filter"
                >
                  
                </button>
              </div>
            )}
            {vendorFilter && (
              <div class="active-filter-badge">
                <span>Vendor: {vendorFilter.replace(/-/g, ' ')}</span>
                <button 
                  class="remove-filter" 
                  data-remove-vendor
                  title="Remove vendor filter"
                >
                  
                </button>
              </div>
            )}
            {certFilter && (
              <div class="active-filter-badge">
                <span>Cert: {certFilter.replace(/\d+-/g, '').replace(/-/g, ' ')}</span>
                <button 
                  class="remove-filter" 
                  data-remove-cert
                  title="Remove certification filter"
                >
                  
                </button>
              </div>
            )}
            <button class="clear-filters" onclick={`window.location.href='${withBase('/certifications')}'`}>Clear All</button>
          </div>
        )}
